<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head') %>
    <title>Blogify</title>
  </head>

  <body style="font-family: Helvetica, sans-serif">
    <section class="w-full min-h-screen bg-gray-900">
      <%- include('./components/navbar') %>

      <main
        class="py-8 w-full max-w-screen-xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 px-4 mx-auto"
      >
        <% if (!blogs || blogs.length === 0) { %>
        <h2 class="text-xl text-gray-800 dark:text-white">
          No blogs available
        </h2>
        <% }else { %>
        <!-- Blogs -->
        <% blogs.forEach(blog => { %>
        <div
          class="w-full bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-95 mx-auto flex flex-col"
        >
          <img
            src="<%= blog.coverImage %>"
            alt="<%= blog.title %> cover image"
            class="w-full h-48 object-cover"
          />

          <div class="p-4 flex flex-col h-full">
            <h3 class="text-xl font-semibold text-gray-800 capitalize pb-4">
              <%= blog.title %>
            </h3>

            <a href="/blog/<%= blog._id %>" class="mt-auto w-max">
              <button
                class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600 cursor-pointer"
              >
                Read More
              </button>
            </a>
          </div>
        </div>
        <% }) %> <% } %>
      </main>
    </section>
  </body>
</html>
